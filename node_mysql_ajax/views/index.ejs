      <script>
    const xhr = new XMLHttpRequest();
    xhr.open("GET","/api/photo/list");
    xhr.addEventListener("load", (e) => {
        const photoList = JSON.parse((xhr.responseText));
        const a = [photoList[0].id,photoList[0].name];
        const b = [photoList[0].id];
        console.log(a);
        console.log(b);
        document.querySelector('#ajax').innerHTML = a;
